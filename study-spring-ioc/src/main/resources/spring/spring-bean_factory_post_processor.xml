<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   <!-- （★）bean definition -->
   <bean id="lifecycleBean" class="study.spring.ioc.bean.LifecycleBean"
         init-method="myInit"
         destroy-method="myDestroy">
      <property name="name" value="wangzhj"/>
   </bean>

   <!-- （★）bean factory post processor -->
   <bean class="study.spring.ioc.bean_factory_post_processor.CustomBeanFactoryPostProcessor"/>
   <bean class="study.spring.ioc.bean_factory_post_processor.CustomBeanDefinitionRegistryPostProcessor"/>
</beans>
